{
    "extends": "../../tsconfig.importmap.json",
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2022",
        "sourceMap": true,
        "outDir": "../../dist/client",
        "strict": true,
        "noImplicitAny": true,
        "checkJs": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "composite": true,
    },
    "include": [
        "**/*",
    ],
    "references": [
        {
            "path": "../shared"
        },
    ]
}